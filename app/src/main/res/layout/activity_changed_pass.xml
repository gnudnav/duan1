<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Activity_Changed_Pass"
    android:orientation="vertical">
  <ImageView
      android:id="@+id/ic_back"
      android:layout_marginTop="30dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_back2"
      android:layout_marginHorizontal="30dp"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Create a new password"
      android:textStyle="bold"
      android:textSize="28dp"
      android:layout_marginTop="30dp"
      android:layout_marginHorizontal="30dp"/>
  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Please create a password of at least 6 letters and numbers.
You will need to use this password to log in to your account
mine"
      android:layout_marginHorizontal="30dp"/>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_marginTop="50dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:endIconMode="password_toggle">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtmatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu mới"
        android:paddingLeft="30dp"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="20dp"
        android:paddingStart="30dp"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:background="@drawable/custome_edt"
        android:layout_marginHorizontal="30dp"/>
  </com.google.android.material.textfield.TextInputLayout>
  <com.google.android.material.textfield.TextInputLayout
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:endIconMode="password_toggle">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtRematkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/custome_edt"
        android:hint="Nhập lại mật khẩu"
        android:paddingLeft="20dp"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_key"
        android:drawablePadding="20dp"
        android:paddingStart="30dp"
        />
  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnxacnhan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="40dp"
      android:layout_marginTop="30dp"
      android:background="@drawable/custome_btn"
      android:backgroundTint="@null"
      android:text="Changed Password"
      android:textColor="@color/white" />


</LinearLayout>