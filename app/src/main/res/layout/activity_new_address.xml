<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Activity_New_Address"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ic_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back"/>
    <TextView
        android:id="@+id/txtten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="Address"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ic_back"/>
    <TextView
        android:id="@+id/contant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtten"
        android:text="Contact"
        android:textSize="18dp"
        android:layout_marginTop="30dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout1"
        android:layout_below="@id/contant"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edttendangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter full name"
            android:drawableStart="@drawable/ic_person1"
            android:drawablePadding="20dp"
            android:paddingStart="30dp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:background="@drawable/custome_edt"
            android:layout_marginHorizontal="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout2"
        android:layout_below="@id/textinputlayout1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtsdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your phone number"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="20dp"
            android:paddingStart="30dp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:background="@drawable/custome_edt"
            android:layout_marginHorizontal="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/contant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textinputlayout2"
        android:text="Contact"
        android:textSize="18dp"
        android:layout_marginTop="30dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout3"
        android:layout_below="@id/contant1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:drawablePadding="20dp"
            android:paddingStart="30dp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:background="@drawable/custome_edt"
            android:layout_marginHorizontal="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout4"
        android:layout_below="@id/textinputlayout3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:drawablePadding="20dp"
            android:paddingStart="30dp"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:background="@drawable/custome_edt"
            android:layout_marginHorizontal="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_marginTop="50dp"
        android:layout_below="@id/textinputlayout4"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Confirm"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/custome_btn"
/>

</RelativeLayout>