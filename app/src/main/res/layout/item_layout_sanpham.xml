<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="160dp"
    android:layout_height="190dp"
    android:background="@drawable/custom_linearlayout"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/imgsanpham"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="100dp"
        android:layout_height="90dp"/>
    <TextView
        android:layout_marginHorizontal="15dp"
        android:id="@+id/ten"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imgsanpham"
        android:text="gfdgdgdgdfg"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/gia"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000000"
        android:layout_below="@+id/ten"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ten"
        android:layout_toRightOf="@id/gia"
        android:text="Ä‘"/>
    <TextView
        android:layout_marginTop="7dp"
        android:id="@+id/so"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:layout_toLeftOf="@id/img_star"
        android:layout_below="@id/ten"
        android:textSize="12dp"
        android:layout_marginRight="3dp" />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/img_star"
        android:layout_marginRight="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_star"
        android:layout_below="@+id/ten"
        android:layout_alignParentRight="true"/>
</RelativeLayout>