<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp">
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tenn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="27dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_below="@id/tenn"/>
        <ImageView
            android:id="@+id/profile"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/img_edit_profile"/>
        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/changed_password"
            android:layout_marginTop="15dp"
            android:layout_below="@id/profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/img_changed_password"/>

        <ImageView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/changed_password"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_notications"/>
        <ImageView
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/notification"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_language"/>
        <TextView
            android:id="@+id/hhh"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencess"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_below="@id/language"/>
        <ImageView
            android:id="@+id/Helpandpolicies"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hhh"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_legal_and_policies"/>
        <ImageView
            android:id="@+id/helpsupport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/Helpandpolicies"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_help_support"/>

        <ImageView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/helpsupport"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_logout"/>

    </RelativeLayout>
</ScrollView>
