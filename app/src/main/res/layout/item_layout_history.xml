<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/custom_linearlayout"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_breguet_breguetclassic"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CITIZEN AUTOMATIC TSUYOSA"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_toRightOf="@id/img"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object:"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/ten"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/loai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Man"
            android:layout_toRightOf="@id/object"
            android:layout_below="@id/ten"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:layout_toRightOf="@id/img"
            android:layout_below="@id/object"/>
        <TextView
            android:layout_below="@id/object"
            android:layout_toRightOf="@id/quantity"
            android:id="@+id/txt_quantity"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/gia"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_quantity"
            android:layout_below="@id/loai"
            android:text="2,040,000 Ä‘"/>

    </RelativeLayout>

</LinearLayout>