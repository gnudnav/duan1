<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_marginTop="5dp"
           android:id="@+id/ic_back"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/ic_back"/>
       <TextView
           android:id="@+id/txtten"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginLeft="85dp"
           android:text="Product Details"
           android:textSize="25dp"
           android:textStyle="bold"
           android:layout_toRightOf="@id/ic_back"/>
       <ImageView
           android:id="@+id/ic_cart"
           android:layout_marginTop="5dp"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/ic_cart"
           android:layout_alignParentEnd="true"/>
       <ImageView
           android:id="@+id/img_sanpham"
           android:layout_marginTop="20dp"
           android:layout_width="250dp"
           android:layout_height="250dp"
           android:src="@drawable/img_breguet_breguetclassic"
           android:layout_below="@+id/txtten"
           android:layout_marginLeft="70dp"/>
       <TextView
           android:textStyle="bold"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:textSize="25dp"
           android:id="@+id/txt_tensanpham"
           android:layout_below="@+id/img_sanpham"/>
       <ImageView
           android:id="@+id/heart"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:src="@drawable/ic_img_heart_black"
           android:layout_below="@+id/img_sanpham"
           android:layout_marginTop="30dp"
           android:layout_alignParentEnd="true" />

       <ImageView
           android:id="@+id/img_star"
           android:layout_marginTop="5dp"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/ic_star"
           android:layout_below="@id/txt_tensanpham"/>
       <TextView
           android:id="@+id/ten"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/txt_tensanpham"
           android:layout_toRightOf="@+id/img_star"
           android:text="4.5"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="10dp"
           android:textSize="18dp"
           android:textColor="#FF0101"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/txt_tensanpham"
           android:layout_toRightOf="@+id/ten"
           android:text="(329 Review)"
           android:layout_marginTop="6dp"
           android:layout_marginLeft="10dp"
           android:textSize="15dp" />
       <TextView
           android:id="@+id/mtct"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/ten"
           android:text="Lorem ipsum dolor sit amet consectetur adipisicing
elit. Odio porro modi necessitatibus quod facilis.
Assumenda nulla voluptatibus doloremquaerat
nisi! Quia quod quae odit recusandae voluptatum,
quaerat esse eos omnis "/>
       <TextView
           android:id="@+id/jjj"
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Choose amount:"
           android:layout_below="@+id/mtct"
           android:textStyle="bold"
           android:textSize="20dp"/>
       <LinearLayout
           android:layout_marginLeft="80dp"
           android:layout_width="120dp"
           android:layout_height="40dp"
           android:layout_toRightOf="@id/jjj"
           android:layout_below="@id/mtct"
           android:background="@drawable/custom_icon_quantity">
           <ImageView
               android:layout_marginLeft="9dp"
               android:layout_marginTop="5dp"
               android:id="@+id/dautru"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_giamquantity"/>
           <TextView
               android:gravity="center"
               android:id="@+id/txt_quantity"
               android:layout_marginLeft="7dp"
               android:layout_marginRight="7dp"
               android:layout_marginTop="3dp"
               android:layout_width="30dp"
               android:layout_height="wrap_content"
               android:text="0"
               android:textStyle="bold"
               android:textSize="25dp"/>
           <ImageView
               android:layout_marginTop="5dp"
               android:src="@drawable/ic_tangquantity"
               android:id="@+id/daucong"
               android:layout_width="30dp"
               android:layout_height="30dp" />
       </LinearLayout>
       <TextView
           android:id="@+id/price"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/jjj"
           android:text="Price"
           android:layout_marginTop="50dp"
           android:textSize="15dp"
           android:textColor="#C1C0C0"
           android:textStyle="bold"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/price"
           android:id="@+id/txt_giasanpham"
           android:text="2000000"
           android:textStyle="bold"
           android:textSize="33dp"/>
       <TextView
           android:layout_marginLeft="3dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/price"
           android:layout_toRightOf="@+id/txt_giasanpham"
           android:text="Ä‘"
           android:textStyle="bold"
           android:textSize="33dp"/>
       <Button
           android:id="@+id/btn_add"
           android:layout_below="@+id/price"
           android:layout_width="180dp"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:text="Add to Cart"/>
   </RelativeLayout>
</ScrollView>